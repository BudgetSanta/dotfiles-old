#Colours for Echos
NC='\033[0m' # No Color
WHITE='\033[1;37m'
PURPLE='\033[0;35m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
L_BLUE='\033[1;34m'
CYAN='\033[0;36m'
GREEN='\033[0;32m'

#ALIASES
#------------------
# Using the better python
alias python=python3

# C Project ls pretty
alias lsp='echo -n "\n\t${WHITE}---- ${CYAN}HEADER FILES${WHITE} ----${YELLOW}\n " &&
            ls *.h &&
            echo -n "\n\t${WHITE}---- ${CYAN}BINARIES${WHITE} ----\n " &&
            ls -I "*.*" &&
            echo -n "\n\t${WHITE}---- ${CYAN}C FILES${WHITE} ----${L_BLUE}\n " &&
            ls *.c '

alias ass="cd ~/git/comp1511/ass2"
